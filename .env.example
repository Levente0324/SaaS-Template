# ─── Supabase ───────────────────────────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ─── Stripe ──────────────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
# The price ID of your subscription product (change per product)
STRIPE_PRICE_ID=price_...

# ─── Google Gemini ───────────────────────────────────────────────────────────
GEMINI_API_KEY=your-gemini-api-key

# ─── App ─────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=https://your-domain.com

# ─── Cost Protection ─────────────────────────────────────────────────────────
# Maximum AI tool calls per user per 24 hours
MAX_DAILY_USAGE_PER_USER=10
# Milliseconds before AI request is aborted
AI_REQUEST_TIMEOUT_MS=30000
# Set to "true" to instantly disable all AI routes across the app
DISABLE_AI_FEATURES=false
